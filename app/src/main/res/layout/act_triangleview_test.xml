<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:third_tools="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <!-- triangle -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <com.zyl.triangleview.widget.TriangleView
                android:layout_width="100dp"
                android:layout_height="100dp"
                third_tools:t_fillColor="#FF0000"
                third_tools:t_text="测试"
                third_tools:t_textSize="16sp" />

            <com.zyl.triangleview.widget.TriangleView
                android:layout_width="100dp"
                android:layout_height="100dp"
                third_tools:t_fillColor="#00FF00"
                third_tools:t_text="测试"
                third_tools:t_textColor="#000000"
                third_tools:t_textSize="18sp"
                third_tools:t_type="rightTop" />

            <com.zyl.triangleview.widget.TriangleView
                android:layout_width="100dp"
                android:layout_height="100dp"
                third_tools:t_fillColor="#0000FF"
                third_tools:t_text="测试"
                third_tools:t_textSize="20sp"
                third_tools:t_type="rightBottom" />

            <com.zyl.triangleview.widget.TriangleView
                android:layout_width="100dp"
                android:layout_height="100dp"
                third_tools:t_fillColor="#FFFF00"
                third_tools:t_text="测试"
                third_tools:t_textColor="#FF00"
                third_tools:t_textSize="22sp"
                third_tools:t_type="leftBottom" />
        </LinearLayout>

        <!-- round triangle -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <com.zyl.triangleview.widget.RoundTriangleView
                android:layout_width="100dp"
                android:layout_height="100dp"
                third_tools:rt_fillColor="#FF0000"
                third_tools:rt_text="测试"
                third_tools:rt_textSize="16sp" />

            <com.zyl.triangleview.widget.RoundTriangleView
                android:layout_width="100dp"
                android:layout_height="100dp"
                third_tools:rt_fillColor="#00FF00"
                third_tools:rt_roundRadius="20"
                third_tools:rt_text="测试"
                third_tools:rt_textColor="#000000"
                third_tools:rt_textSize="18sp"
                third_tools:rt_type="rightTop" />

            <com.zyl.triangleview.widget.RoundTriangleView
                android:layout_width="100dp"
                android:layout_height="100dp"
                third_tools:rt_fillColor="#0000FF"
                third_tools:rt_roundRadius="40"
                third_tools:rt_text="测试"
                third_tools:rt_textSize="20sp"
                third_tools:rt_type="rightBottom" />

            <com.zyl.triangleview.widget.RoundTriangleView
                android:layout_width="100dp"
                android:layout_height="100dp"
                third_tools:rt_fillColor="#FFFF00"
                third_tools:rt_roundRadius="60"
                third_tools:rt_text="测试"
                third_tools:rt_textColor="#FF00"
                third_tools:rt_textSize="22sp"
                third_tools:rt_type="leftBottom" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>